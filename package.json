{
  "name": "anotherkrunkerclient",
  "productName": "anotherkrunkerclient",
  "version": "0.1.0",
  "description": "Another damn Krunker client",
  "author": "Asger Finding",
  "license": "GPLV3",
  "private": true,
  "main": "build/main.js",
  "repository": "asger-finding/anotherkrunkerclient",
  "scripts": {
    "start": "gulp clean && gulp --state=development && electron ./build/main.js",
    "deploy": "gulp annihilation && gulp --state=production && electron-builder --win && yarn postinstall",
    "postinstall": "electron-builder install-app-deps && gulp clean",
    "lint": "yarn eslint . --ext .ts,.js"
  },
  "build": {
    "appId": "com.electron.akc",
    "copyright": "Copyright Â© 2022 Asger Finding",
    "publish": "github",
    "asar": true,
    "compression": "maximum",
    "files": [
      "build/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "forceCodeSigning": false,
    "artifactName": "anotherkrunkerclient-${os}-${arch}.${ext}",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "media/icon.ico"
    },
    "nsis": {
      "artifactName": "anotherkrunkerclient-Windows-${arch}.exe",
      "installerSidebar": "media/installerSidebar.bmp",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    }
  },
  "dependencies": {
    "axios": "^0.26.1",
    "electron-acrylic-window": "^0.5.11",
    "electron-is-dev": "^2.0.0",
    "electron-localshortcut": "^3.2.1",
    "electron-log": "^4.4.6",
    "electron-store": "^8.0.1",
    "electron-updater": "4.6.5",
    "module-alias": "^2.2.2",
    "semver": "^7.3.5"
  },
  "devDependencies": {
    "@swc/core": "^1.2.163",
    "@types/node": "12.12.21",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "cssnano": "^5.1.7",
    "del": "^6.0.0",
    "electron": "^9.4.3",
    "electron-builder": "^22.14.13",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-typescript": "^16.2.0",
    "eslint-config-raven": "^1.0.3",
    "eslint-plugin-import": "^2.25.4",
    "gulp": "^4.0.2",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-libsquoosh": "^1.1.2",
    "gulp-postcss": "^9.0.1",
    "gulp-sass": "^5.1.0",
    "gulp-swc": "^1.2.3",
    "postcss": "^8.4.12",
    "sass": "^1.49.11",
    "typescript": "^4.6.3",
    "yargs": "^17.4.0"
  }
}
